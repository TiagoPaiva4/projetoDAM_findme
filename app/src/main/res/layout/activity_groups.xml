<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- MAPA DE FUNDO -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapGroups"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="85dp" />

    <!-- CAMADA ESCURA TRANSPARENTE -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="85dp"
        android:background="#66000000" />

    <!-- CONTEÚDO PRINCIPAL (Botão + Lista) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/navBarBottom"
        app:layout_constraintTop_toTopOf="parent">

        <!-- NOVO BOTÃO: CRIAR NOVO GRUPO -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Criar novo grupo"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:paddingVertical="12dp"
            app:backgroundTint="#3A8DDE"
            app:cornerRadius="15dp"
            app:icon="@drawable/ic_plus"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:elevation="4dp"/>

        <!-- LISTA DE GRUPOS -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerGroups"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="20dp"
            tools:listitem="@layout/item_group" />

    </LinearLayout>

    <!-- BARRA DE NAVEGAÇÃO -->
    <LinearLayout
        android:id="@+id/navBarBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="85dp"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:gravity="top"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/navPessoas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconPessoas"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_people"
                app:tint="#8E8E93"/>
            <TextView
                android:id="@+id/textPessoas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pessoas"
                android:textSize="10sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navGrupos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconGrupos"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_groups"
                app:tint="#3A8DDE"/>
            <TextView
                android:id="@+id/textGrupos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupos"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#3A8DDE"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navZona"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconZona"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_circles"
                app:tint="#8E8E93"/>
            <TextView
                android:id="@+id/textZona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zona"
                android:textSize="10sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navEu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconEu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_me"
                app:tint="#8E8E93"/>
            <TextView
                android:id="@+id/textEu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eu"
                android:textSize="10sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>