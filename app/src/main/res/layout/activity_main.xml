<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. MAPA (Fundo) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- 2. BARRA DE PESQUISA FLUTUANTE (No Topo) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#CC2C2C2E"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#BBBBBB"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesquisar Pessoas..."
                android:textColor="#BBBBBB"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 3. PAINEL INFERIOR -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        app:behavior_peekHeight="240dp"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- 1. A PEGA (BARRINHA CINZENTA) - FLUTUANTE EM CIMA -->
        <LinearLayout
            android:id="@+id/dragHandleArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <!-- A Barra Cinzenta -->
            <View
                android:id="@+id/dragHandle"
                android:layout_width="75dp"
                android:layout_height="5dp"
                android:background="#8E8E93"
                android:backgroundTint="#8E8E93"/>
        </LinearLayout>

        <!-- 2. CABEÇALHO (ONDE COMEÇA O FUNDO DE VIDRO) -->
        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_glass_header"
            android:paddingTop="10dp"
            android:paddingBottom="5dp">

            <!-- LINHA DAS ABAS + BOTÃO + -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">

                <!-- ABAS -->
                <!-- Aba Pessoas -->
                <LinearLayout
                    android:id="@+id/tabPessoas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <!-- Ícone (VISIBILITY GONE - Escondido mas existe) -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="#FFFFFF"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pessoas"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"/>

                    <!-- O TRAÇO BRANCO -->
                    <View
                        android:id="@+id/indicatorPessoas"
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="#FFFFFF"
                        android:layout_marginTop="6dp"
                        android:visibility="visible"/>
                </LinearLayout>

                <!-- Aba Grupos -->
                <LinearLayout
                    android:id="@+id/tabGrupos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="#AAAAAA"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grupos"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginTop="2dp"/>

                    <View
                        android:id="@+id/indicatorGrupos"
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="#FFFFFF"
                        android:layout_marginTop="6dp"
                        android:visibility="invisible"/>
                </LinearLayout>

                <!-- Aba Círculos -->
                <LinearLayout
                    android:id="@+id/tabCirculos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="#AAAAAA"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Círculos"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginTop="2dp"/>

                    <View
                        android:id="@+id/indicatorCirculos"
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="#FFFFFF"
                        android:layout_marginTop="6dp"
                        android:visibility="invisible"/>
                </LinearLayout>

                <!-- Aba EU -->
                <LinearLayout
                    android:id="@+id/tabEu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="#AAAAAA"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eu"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginTop="2dp"/>

                    <View
                        android:id="@+id/indicatorEu"
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="#FFFFFF"
                        android:layout_marginTop="6dp"
                        android:visibility="invisible"/>
                </LinearLayout>

                <!-- Botão + -->
                <ImageView
                    android:id="@+id/btnAddFriend"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 3. LISTA (Fundo mais Escuro) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFriends"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:background="@drawable/bg_glass_body"
            tools:listitem="@layout/item_person_modern"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>