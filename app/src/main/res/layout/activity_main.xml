<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F7">

    <!-- 1. MAPA -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapMain"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"/>

    <!-- 2. BARRA DE PESQUISA -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#8E8E93"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesquisar Pessoas..."
                android:textColor="#8E8E93"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 3. BOTTOM SHEET -->
    <LinearLayout
        android:id="@+id/bottomSheetFriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_sheet_top"
        android:elevation="12dp"
        android:layout_marginBottom="85dp"
        app:behavior_peekHeight="240dp"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Pega (Handle) -->
        <LinearLayout
            android:id="@+id/dragHandleArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:clickable="true"
            android:focusable="true">
            <View
                android:id="@+id/dragHandle"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="#D1D1D6"
                android:backgroundTint="#D1D1D6"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <!-- Cabeçalho -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pessoas"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/btnAddFriend"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_add_circle"
                app:tint="#3A8DDE"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                tools:src="@android:drawable/ic_input_add"/>
        </LinearLayout>

        <!-- Lista -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFriends"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:clipToPadding="false"
            android:background="#FFFFFF"
            tools:listitem="@layout/item_person_modern"/>
    </LinearLayout>

    <!-- 4. BARRA DE NAVEGAÇÃO (Sem os indicators) -->
    <LinearLayout
        android:id="@+id/navBarBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="85dp"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <!-- Botão PESSOAS -->
        <LinearLayout
            android:id="@+id/navPessoas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconPessoas"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_people"
                app:tint="#3A8DDE"/>
            <TextView
                android:id="@+id/textPessoas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pessoas"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#3A8DDE"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botão GRUPOS -->
        <LinearLayout
            android:id="@+id/navGrupos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconGrupos"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_groups"
                app:tint="#8E8E93"/>
            <TextView
                android:id="@+id/textGrupos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupos"
                android:textSize="10sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botão ZONA -->
        <LinearLayout
            android:id="@+id/navZona"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconZona"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_circles"
                app:tint="#8E8E93"/>
            <TextView
                android:id="@+id/textZona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zona"
                android:textSize="10sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botão EU -->
        <LinearLayout
            android:id="@+id/navEu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconEu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_me"
                app:tint="#8E8E93"/>
            <TextView
                android:id="@+id/textEu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eu"
                android:textSize="10sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>