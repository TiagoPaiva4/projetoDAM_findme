<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. MAPA -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapProfile"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- 2. PAINEL ÚNICO FLUTUANTE -->
    <LinearLayout
        android:id="@+id/bottomSheetProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        app:behavior_peekHeight="240dp"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- A. PEGA (FLUTUANTE) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="8dp">
            <View
                android:layout_width="75dp"
                android:layout_height="5dp"
                android:background="#8E8E93"
                android:backgroundTint="#8E8E93"/>
        </LinearLayout>

        <!-- B. CABEÇALHO COM ABAS (Fundo Claro) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_glass_header"
            android:paddingTop="15dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">

                <!-- Aba Pessoas (Inativa) -->
                <LinearLayout
                    android:id="@+id/tabPessoas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pessoas"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginTop="2dp"/>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="#FFFFFF"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"/>
                </LinearLayout>

                <!-- Aba Grupos (Inativa) -->
                <LinearLayout
                    android:id="@+id/tabGrupos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grupos"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginTop="2dp"/>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="#FFFFFF"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"/>
                </LinearLayout>

                <!-- Aba Círculos (Inativa) -->
                <LinearLayout
                    android:id="@+id/tabCirculos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Círculos"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginTop="2dp"/>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="#FFFFFF"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"/>
                </LinearLayout>

                <!-- Aba EU (ATIVA - Destaque Branco e Traço) -->
                <LinearLayout
                    android:id="@+id/tabEu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eu"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"/>
                    <!-- TRAÇO VISÍVEL -->
                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="#FFFFFF"
                        android:layout_marginTop="8dp"
                        android:visibility="visible"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- C. CORPO DO PERFIL (Fundo Escuro) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_glass_body"
            android:padding="20dp">

            <!-- Informação de Localização -->
            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A obter localização..."
                android:textColor="#BBBBBB"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"/>

            <!-- Título Pedidos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedidos de Amizade"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <!-- Lista de Pedidos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRequests"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"/>

            <!-- Botão de Sair -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Terminar Sessão"
                android:textColor="#FF3B30"
                android:textStyle="bold"
                android:backgroundTint="#2C2C2E"
                app:cornerRadius="12dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>