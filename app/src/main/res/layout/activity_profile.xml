<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- MAPA DE FUNDO -->
    <!-- (ID mantido: mapProfile) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapProfile"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="85dp" />

    <!-- CONTEÚDO COM SCROLL -->
    <!-- ADICIONADO ID: nestedScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/navBarBottom"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="20dp">

            <!-- ESPAÇO TRANSPARENTE (ÁREA DE TOQUE DO MAPA) -->
            <!-- ADICIONADO ID: viewMapTouch -->
            <View
                android:id="@+id/viewMapTouch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="400dp"/>

            <!-- (O resto do layout mantém-se igual...) -->
            <!-- CARTÃO 1: LOCALIZAÇÃO -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="12dp">

                <!-- ... Conteúdo do cartão ... -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A minha localização"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="top">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_pin_blue"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="8dp"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvStreet"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="A carregar rua..."
                                    android:textColor="#404040"
                                    android:textSize="15sp"
                                    android:paddingEnd="30dp"/>
                                <TextView
                                    android:id="@+id/tvCityZip"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="A carregar cidade..."
                                    android:textColor="#8E8E93"
                                    android:textSize="14sp"
                                    android:layout_marginTop="2dp"
                                    android:paddingEnd="30dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="12dp"
                            android:background="#E5E5EA"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Partilha de localização"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/tvShareStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ativa"
                                    android:textColor="#8E8E93"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp"/>
                            </LinearLayout>
                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switchLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                app:trackTint="#34C759"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="6dp"
                            android:background="#E5E5EA"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Última atualização: agora"
                            android:textColor="#AEAEB2"
                            android:textSize="11sp"
                            android:gravity="center"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnExpandMore"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="top|end"
                        android:src="@drawable/ic_arrow_down"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#8E8E93" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- CONTENTOR ESCONDIDO (Pedidos + Logout) -->
            <LinearLayout
                android:id="@+id/layoutMoreOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="24dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="8dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pedidos de amizade"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:padding="16dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:background="#E5E5EA"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerRequests"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            tools:itemCount="2"
                            tools:listitem="@layout/item_request"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Terminar Sessão"
                    android:textColor="#FF3B30"
                    android:backgroundTint="#FFFFFF"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Credits Info Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="24dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Créditos"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Engenharia Informática"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desenvolvimento de Aplicações Móveis\n3º Ano, 1º Semestre"
                            android:textColor="#8E8E93"
                            android:textSize="13sp"
                            android:layout_marginBottom="12dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E5E5EA"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Autores"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mário Fernandes Bonacho - Nº 26471\nTiago Filipe Oliveira Paiva - Nº 25958"
                            android:textColor="#404040"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginBottom="12dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E5E5EA"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bibliotecas"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• Volley 1.2.1 - github.com/google/volley\n• Google Maps SDK 18.2.0\n• Play Services Location 21.0.1\n• Play Services Auth 20.7.0\n• BlurView 2.0.3 - github.com/Dimezis/BlurView\n• Material Components 1.10.0"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"
                            android:lineSpacingExtra="3dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BARRA DE NAVEGAÇÃO (Mantida igual) -->
    <LinearLayout
        android:id="@+id/navBarBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="85dp"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:gravity="top"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/navPessoas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconPessoas"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_people"
                app:tint="#8E8E93"/>
            <TextView
                android:id="@+id/textPessoas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pessoas"
                android:textSize="10sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navGrupos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconGrupos"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_groups"
                app:tint="#8E8E93"/>
            <TextView
                android:id="@+id/textGrupos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupos"
                android:textSize="10sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navZona"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconZona"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_circles"
                app:tint="#8E8E93"/>
            <TextView
                android:id="@+id/textZona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zona"
                android:textSize="10sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navEu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/iconEu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_me"
                app:tint="#3A8DDE"/>
            <TextView
                android:id="@+id/textEu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eu"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#3A8DDE"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>